using namespace std;
#include <string>
#include "DebugWindow.h"
#include "CommandWindow.h"

int main () {
   initscr();
   cbreak();
   DebugWindow d1(10, 20, 0, 0, "Debug 1: ");
   d1.on();
   DebugWindow d2(10, 20, 0, 20, "Debug 2: ");
   d2.on();
   DebugWindow d3(10, 20, 0, 40, "Debug 3: ");
   d3.on();
   d3.pause();
   endwin();
   return 0;
}

