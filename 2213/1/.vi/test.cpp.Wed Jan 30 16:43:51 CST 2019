void recFun(int u)
{
 if (u == 0)
    cout << "Zero! ";
 else
   {
    cout << "Negative ";
    recFun(u + 1);
   }
}

int recEx12(int a, int b)
{
 if (a < b)
    return a + b;
 else
    return recEx12(a - b, b + 1);
}

